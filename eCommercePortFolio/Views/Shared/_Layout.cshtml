<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - My ASP.NET Application</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Styles.Render("~/Content/additional-css")
    </head>
    <body class="animsition" style="padding-top: unset !important;">
        @{
            Html.RenderPartial("_NavBar");
            if (ViewBag.Type == 1)
            {
                ViewBag.ClassName = "container body-content";
            }
            else if(ViewBag.Type == 2)
            {
                ViewBag.ClassName = "container1-page";
            }
        }
        <div class="@ViewBag.ClassName">
            @RenderBody()

            @Html.Partial("_Footer")
        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundle/additional-js")
        @RenderSection("scripts", required: false)
        <script type="text/javascript">
            $(".selection-1").select2({
                minimumResultsForSearch: 20,
                dropdownParent: $('#dropDownSelect1')
            });
            $(".selection-2").select2({
                minimumResultsForSearch: 20,
                dropdownParent: $('#dropDownSelect2')
            });
            $('.block2-btn-addcart').each(function () {
                var nameProduct = $(this).parent().parent().parent().find('.block2-name').html();
                $(this).on('click',
                    function () {
                        swal(nameProduct, "is added to cart !", "success");
                    });
            });

            $('.block2-btn-addwishlist').each(function () {
                var nameProduct = $(this).parent().parent().parent().find('.block2-name').html();
                $(this).on('click',
                    function () {
                        swal(nameProduct, "is added to wishlist !", "success");
                    });
            });
            $('.parallax100').parallax100();

            
        </script>
    </body>
</html>
